    <label for="pass_td" class="col-sm-2 control-label">
      Pass td
    </label>
    <div class="col-sm-10">
      <input type="text" id="pass_td" name="pass_td" placeholder="Pass td" class="form-control" value="<%= @player_projection.pass_td %>">
    </div>
  </div>

  <!-- Label and input for interceptions -->
  <div class="form-group">
    <label for="interceptions" class="col-sm-2 control-label">
      Interceptions
