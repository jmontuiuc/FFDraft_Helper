<div class="page-header">
  <h1>Edit Player Projection #<%= @player_projection.id %></h1>
</div>

<% if @player_projection.errors.any? %>
  <% @player_projection.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_player_projection/<%= @player_projection.id %>" class="form-horizontal">
  <!-- Label and input for player -->
  <div class="form-group">
    <label for="player" class="col-sm-2 control-label">
      Player
    </label>
    <div class="col-sm-10">
      <input type="text" id="player" name="player" placeholder="Player" class="form-control" value="<%= @player_projection.player %>">
    </div>
  </div>

  <!-- Label and input for team -->
  <div class="form-group">
    <label for="team" class="col-sm-2 control-label">
      Team
    </label>
    <div class="col-sm-10">
      <input type="text" id="team" name="team" placeholder="Team" class="form-control" value="<%= @player_projection.team %>">
    </div>
  </div>

  <!-- Label and input for position -->
  <div class="form-group">
    <label for="position" class="col-sm-2 control-label">
      Position
    </label>
    <div class="col-sm-10">
      <input type="text" id="position" name="position" placeholder="Position" class="form-control" value="<%= @player_projection.position %>">
    </div>
  </div>

  <!-- Label and input for completions -->
  <div class="form-group">
    <label for="completions" class="col-sm-2 control-label">
      Completions
    </label>
    <div class="col-sm-10">
      <input type="text" id="completions" name="completions" placeholder="Completions" class="form-control" value="<%= @player_projection.completions %>">
    </div>
  </div>

