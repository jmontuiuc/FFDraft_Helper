<div class="page-header">
  <h1>Player projections</h1>
</div>

<p><a href="/player_projections/new" class="btn btn-primary">Add a New Player Projection</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Player</th>
      <th>Team</th>
      <th>Position</th>
      <th>Completions</th>
      <th>Pass yds</th>
      <th>Pass td</th>
      <th>Interceptions</th>
      <th>Rush yds</th>
      <th>Rush td</th>
      <th>Receptions</th>
      <th>Rec yds</th>
      <th>Rec td</th>
      <th>Fumbles</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @player_projections.each do |player_projection| %>
      <tr>
        <td><%= player_projection.player %></td>
        <td><%= player_projection.team %></td>
        <td><%= player_projection.position %></td>
        <td><%= player_projection.completions %></td>
        <td><%= player_projection.pass_yds %></td>
        <td><%= player_projection.pass_td %></td>
        <td><%= player_projection.interceptions %></td>
        <td><%= player_projection.rush_yds %></td>
        <td><%= player_projection.rush_td %></td>
        <td><%= player_projection.receptions %></td>
        <td><%= player_projection.rec_yds %></td>
        <td><%= player_projection.rec_td %></td>
        <td><%= player_projection.fumbles %></td>
        <td>
          <a href="/player_projections/<%= player_projection.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/player_projections/<%= player_projection.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_player_projection/<%= player_projection.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

